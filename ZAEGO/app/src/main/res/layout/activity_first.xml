<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".FirstActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textlines">

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ZAEGO"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/my_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:background="@drawable/me" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="570dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <View
                    android:layout_width="460dp"
                    android:layout_height="2dp"
                    android:background="#f2f2f2" />

                <ImageView
                    android:id="@+id/hotitem"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/photo_frame"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/banner1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/texttoday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="오늘의 "
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/texthot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOT "
                    android:textColor="#ff0000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textitem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ITEM"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/nike1"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="30dp"
                    app:srcCompat="@drawable/nikeshoes1"
                    android:background="@drawable/shadow"/>

                <ImageView
                    android:id="@+id/nike2"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="30dp"
                    app:srcCompat="@drawable/nikeshoes2"
                    android:background="@drawable/shadow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="에어 포스1\nPARA-NOISE\n300,000 원"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="60dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="벤 앤 제리스X나이키\nSB 덩크 청키 덩키\n310,000 원"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cloth"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="30dp"
                    app:srcCompat="@drawable/cloth"
                    android:background="@drawable/shadow"/>

                <ImageView
                    android:id="@+id/doll"
                    android:layout_width="160dp"
                    android:layout_height="170dp"
                    android:layout_marginLeft="30dp"
                    app:srcCompat="@drawable/doll"
                    android:background="@drawable/shadow"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="슈프림X루이비통\n모노그램 후디\n9,000,000 원"
                    android:textStyle="bold"
                    android:layout_marginLeft="55dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="카우스X디올옴므\nBFF인형\n10,000,000 원"
                    android:textStyle="bold"
                    android:layout_marginLeft="75dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/product_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_round_square_gradation_btn"
                android:text="리셀상품"
                android:textColor="@color/black"
                android:textStyle="bold" />

        <Button
                android:id="@+id/asset_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/square_gradation_btn"
                android:text="자산관리"
                android:textColor="@color/black"
                android:textStyle="bold" />

        <Button
                android:id="@+id/mypage_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/square_gradation_btn"
                android:text="마이페이지"
                android:textColor="@color/black"
                android:textStyle="bold" />

        <Button
                android:id="@+id/question_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/right_round_square_gradation_btn"
                android:text="1:1 문의"
                android:textColor="@color/black"
                android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>