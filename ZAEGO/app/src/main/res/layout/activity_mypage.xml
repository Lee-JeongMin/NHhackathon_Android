<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MypageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/textlines">

        <TextView
            android:id="@+id/toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ZAEGO"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:background="?attr/actionModeCloseDrawable" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="568dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="김농협님"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/shadow"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/test_res_img"
                    android:layout_width="89dp"
                    android:layout_height="91dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="김농협님의 성향은...."
                        android:textColor="#1c1c1c"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/test_res_text"
                        android:layout_width="match_parent"
                        android:layout_height="57dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:paddingTop="5dp"
                        android:textColor="#00B140"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/type_btn"
                        android:layout_width="91dp"
                        android:layout_height="45dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/shadow"
                        android:text="테스트 하기"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadow1"
                android:text="계정관리"
                android:textColor="#424242"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shadow2"
                android:text="카드관리"
                android:textColor="#424242"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shadow3"
                android:text="거래내역"
                android:textColor="#424242"
                android:textStyle="bold"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shadow4"
                android:text="환경설정"
                android:textColor="#424242"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shadow5"
                android:text="공지사항"
                android:textColor="#424242"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shadow6"
                android:text="1:1문의"
                android:textColor="#424242"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/shadow7"
                android:text="탈퇴하기"
                android:textColor="#424242"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/product_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_round_square_gradation_btn"
            style="?android:attr/borderlessButtonStyle"
            android:text="리셀상품"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/asset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/square_gradation_btn"
            style="?android:attr/borderlessButtonStyle"
            android:text="자산관리"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/mypage_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/square_gradation_btn"
            style="?android:attr/borderlessButtonStyle"
            android:text="마이페이지"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/question_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/right_round_square_gradation_btn"
            style="?android:attr/borderlessButtonStyle"
            android:text="1:1 문의"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>