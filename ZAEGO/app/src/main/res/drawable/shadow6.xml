<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:right="1.5dp"
                />
            <solid android:color="#15CCCCCC" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:right="1.5dp"
                 />
            <solid android:color="#17CCCCCC" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <padding
                android:bottom="1.5dp"
                android:left="0.5dp"
                android:right="1.5dp"
                android:top="0.5dp" />
            <solid android:color="#1ACCCCCC" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="#D4E6F1" />
            <corners android:radius="10dp"/>
            <size
                android:width="180dp"
                android:height="120dp"
                />
        </shape>
    </item>
</layer-list>
